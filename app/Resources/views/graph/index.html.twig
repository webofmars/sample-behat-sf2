{% extends 'base.html.twig' %}

{% block body %}
    <h1>Graphs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for graph in graphs %}
            <tr>
                <td><a href="{{ path('_show', { 'id': graph.id }) }}">{{ graph.id }}</a></td>
                <td>{{ graph.name }}</td>
                <td>{{ graph.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': graph.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': graph.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_new') }}">Create a new graph</a>
        </li>
    </ul>
{% endblock %}
